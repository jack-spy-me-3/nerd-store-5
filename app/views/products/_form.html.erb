    <section>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="product_single">
            <h1><%= header %></h1>
            <% if @product.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
              
              <ul>
                <% @product.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
            <% end %>
            <%= form_tag url, method: method_variable do %>
            <div>
              <%= label_tag :name %>
              <%# text_field_tag :name, @product.name %>
              <input type="text" name="name" value="<%= @product.name %>">
            </div>

            <div>
              <%= label_tag :price %>
              <%= text_field_tag :price, @product.price %>
            </div>

            <div>
              <%= label_tag :image %>
              <%= text_field_tag :image, @product.images.last %>
            </div>

            <div>
              <%= label_tag :description %>
              <%= text_field_tag :description, @product.description %>
            </div>

            <div>
              Supplier ID:
              <!-- <input type="text" name="supplier_id"> -->
              <select name="supplier_id">
                <% Supplier.all.each do |supplier| %>
                <option value="<%= supplier.id %>" class="black_text"><%= supplier.name %></option>
                <% end %>
              </select>
            </div>

            <%= submit_tag "Submit" %>
            <% end %>
          </div>
        </div>
      </div>
    </section>